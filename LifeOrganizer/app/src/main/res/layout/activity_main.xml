<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:paddingTop="?attr/actionBarSize">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="main page"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/mainpage"/>


    <Button
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainpage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="calendar" />

    <Button
        android:id="@+id/My_Calendar"
        android:layout_width="213dp"
        android:layout_height="83dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/title_calendar"
        tools:text="My Calendar"
        android:textAllCaps="false"
        android:textSize="18sp" />


    <Button
        android:id="@+id/Todays_Schedule"
        android:layout_width="526dp"
        android:layout_height="115dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-medium"
        android:text="@string/title_schedule"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="30sp"

        tools:text="Today's Schedule" />

    <Button
        android:id="@+id/Import"
        android:layout_width="150dp"
        android:layout_height="83dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-medium"
        android:text="@string/title_import"
        android:textAllCaps="false"
        android:textSize="18sp"
        tools:text="Import Photo" />

    <Button
        android:id="@+id/Camera"
        android:layout_width="203dp"
        android:layout_height="116dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/title_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256"
        tools:text="Camera" />

</RelativeLayout>